{
  "branches": ["main"],
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "docs", "release": "patch" },
          { "type": "style", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "test", "release": "patch" },
          { "type": "build", "release": "patch" },
          { "type": "ci", "release": "patch" },
          { "type": "chore", "release": "patch" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "âœ¨ Nuevas CaracterÃ­sticas",
              "hidden": false
            },
            { "type": "fix", "section": "ğŸ› Correcciones", "hidden": false },
            { "type": "docs", "section": "ğŸ“š DocumentaciÃ³n", "hidden": false },
            { "type": "style", "section": "ğŸ’… Estilos", "hidden": false },
            {
              "type": "refactor",
              "section": "â™»ï¸ RefactorizaciÃ³n",
              "hidden": false
            },
            { "type": "perf", "section": "âš¡ Rendimiento", "hidden": false },
            { "type": "test", "section": "âœ… Pruebas", "hidden": false },
            { "type": "build", "section": "ğŸ“¦ Build", "hidden": false },
            { "type": "ci", "section": "ğŸ‘· CI", "hidden": false },
            { "type": "chore", "section": "ğŸ”§ Mantenimiento", "hidden": false }
          ]
        },
        "writerOpts": {
          "commitsSort": ["subject", "scope"]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# ğŸ“‹ Changelog\n\nTodos los cambios notables en este proyecto serÃ¡n documentados en este archivo."
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "chore(release): ğŸ“¦ ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ]
  ],
  "ci": false,
  "debug": true
}
