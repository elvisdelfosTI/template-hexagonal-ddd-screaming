{
  "branches": ["main"],
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "docs", "release": "patch" },
          { "type": "style", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "test", "release": "patch" },
          { "type": "build", "release": "patch" },
          { "type": "ci", "release": "patch" },
          { "type": "chore", "release": "patch" },
          { "type": "backup", "release": "patch" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ Features" },
            { "type": "fix", "section": "ğŸ› Bug Fixes" },
            { "type": "docs", "section": "ğŸ“ Documentation" },
            { "type": "style", "section": "ğŸ’„ Styles" },
            { "type": "refactor", "section": "â™»ï¸ Code Refactoring" },
            { "type": "perf", "section": "âš¡ Performance" },
            { "type": "test", "section": "âœ… Tests" },
            { "type": "chore", "section": "ğŸ”§ Maintenance" },
            { "type": "backup", "section": "ğŸ’¾ Backup" }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# ğŸ“‹ Changelog\n\nTodos los cambios notables en este proyecto serÃ¡n documentados en este archivo."
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md"],
        "message": "chore(release): ğŸ“¦ ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ]
  ],
  "ci": false,
  "debug": true,
  "includeAllCommits": true
}
