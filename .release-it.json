{
  "git": {
    "push": false,
    "tag": true,
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": true,
    "tagName": "v${version}",
    "requireUpstream": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "ignoreTypes": ["docs", "chore", "ci", "test", "style", "refactor"]
    }
  },
  "hooks": {
    "before:init": ["git fetch --tags"]
  },
  "github": {
    "release": false
  },
  "npm": false,
  "packageJson": false,
  "ci": true,
  "version": {
    "conventionalCommits": true,
    "preset": "angular",
    "skipPrompt": true,
    "skipVersionPrompt": true,
    "skipQuestions": true
  }
}
